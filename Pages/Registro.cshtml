@page
@model VideojuegosStore.Pages.RegistroModel
@{
    ViewData["Title"] = "Registro de Nuevo Usuario";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Oxanium:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --neon-blue: #4fc3f7;
            --neon-purple: #7c4dff;
            --neon-pink: #ff4081;
            --dark: #121212;
            --darker: #0a0a0a;
            --light: #e0e0e0;
            --text-primary: #f5f5f5;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Rajdhani', 'Segoe UI', sans-serif;
            background: linear-gradient(rgba(18, 18, 18, 0.85), rgba(10, 10, 10, 0.9)), url('https://th.bing.com/th/id/OIP.13Yd7qKJzv9fQKSjdrJfNwHaDe?rs=1&pid=ImgDetMain');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            color: var(--text-primary);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            max-width: 800px;
            width: 100%;
        }

        .row {
            background: rgba(30, 30, 30, 0.7);
            border-radius: 12px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(79, 195, 247, 0.2);
            overflow: hidden;
            margin: 20px;
            padding: 30px 0;
        }

        h2 {
            text-align: center;
            margin: 1.5rem 0;
            font-size: 2.2rem;
            font-weight: 600;
            color: var(--text-primary);
            letter-spacing: 1px;
        }

        .form-group {
            margin-bottom: 1.5rem;
            padding: 0 2.5rem;
        }

        label {
            display: block;
            margin-bottom: 0.6rem;
            font-weight: 500;
            color: var(--neon-blue);
            font-size: 1rem;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            font-size: 1rem;
            background: rgba(20, 20, 20, 0.6);
            border: 1px solid rgba(79, 195, 247, 0.4);
            border-radius: 6px;
            color: var(--text-primary);
            transition: all 0.25s ease;
        }

            .form-control:focus {
                outline: none;
                border-color: var(--neon-blue);
                box-shadow: 0 0 0 2px rgba(79, 195, 247, 0.2);
                background: rgba(30, 30, 30, 0.8);
            }

            .form-control::placeholder {
                color: rgba(224, 224, 224, 0.5);
            }

        .btn {
            padding: 12px 28px;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.25s ease;
            margin-right: 12px;
            font-size: 0.95rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--neon-blue), var(--neon-purple));
            color: var(--dark);
            box-shadow: 0 2px 10px rgba(79, 195, 247, 0.4);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(79, 195, 247, 0.6);
            }

        .btn-secondary {
            background: rgba(124, 77, 255, 0.1);
            color: var(--neon-purple);
            border: 1px solid rgba(124, 77, 255, 0.4);
        }

            .btn-secondary:hover {
                background: rgba(124, 77, 255, 0.2);
                color: var(--light);
            }

        .text-danger {
            color: #ff5252 !important;
            font-size: 0.85rem;
            margin-top: 6px;
            display: block;
        }

        .is-invalid {
            border-color: #ff5252 !important;
            box-shadow: 0 0 0 2px rgba(255, 82, 82, 0.2) !important;
        }

        .form-actions {
            text-align: center;
            margin-top: 2.5rem;
            padding: 0 2.5rem;
        }

        .register-link {
            text-align: center;
            margin-top: 1.5rem;
            color: rgba(230, 241, 255, 0.7);
            position: relative; /* Añadido para asegurarse de que se pueda manipular el z-index */
        }

            .register-link a {
                color: var(--neon-blue);
                text-decoration: none;
                font-weight: 600;
                transition: all 0.3s ease;
                text-shadow: 0 0 5px rgba(0, 245, 255, 0.3);
                position: relative; /* Asegura que se pueda manipular el z-index */
                z-index: 10; /* Asegura que el enlace esté encima de otros elementos */
            }

                .register-link a:hover {
                    color: var(--neon-pink);
                    text-shadow: 0 0 10px rgba(255, 68, 204, 0.5);
                }

        @@media (max-width: 768px) {
            .row {
                margin: 15px;
                padding: 25px 0;
            }

            .form-group {
                padding: 0 1.5rem;
            }

            h2 {
                font-size: 1.8rem;
            }

            .btn {
                padding: 10px 20px;
                margin-bottom: 10px;
                width: 100%;
                margin-right: 0;
            }

            .form-actions {
                display: flex;
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>@ViewData["Title"]</h2>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Usuario.Nombre" class="control-label">Nombre de Usuario</label>
                        <input asp-for="Usuario.Nombre" class="form-control" placeholder="Tu nombre de gamer" />
                        <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Usuario.Correo" class="control-label">Correo Electrónico</label>
                        <input asp-for="Usuario.Correo" class="form-control" id="correo" placeholder="tucorreo@ejemplo.com" />
                        <span asp-validation-for="Usuario.Correo" class="text-danger" id="correoError"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Usuario.Contraseña" class="control-label">Contraseña</label>
                        <input asp-for="Usuario.Contraseña" type="password" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="Usuario.Contraseña" class="text-danger"></span>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Registrarse</button>

                        <div class="register-link">
                            <p>¿YA TIENES UNA CUENTA? <a asp-page="/Login">Volver a Login</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function() {
                $('#correo').on('blur', function() {
                    var correo = $(this).val();
                    if (correo.length > 0) {
                        $.get('/api/Usuario/VerificarCorreo', { correo: correo }, function(existe) {
                            if (existe) {
                                $('#correoError').text('Ya existe un usuario con este correo electrónico');
                                $('#correo').addClass('is-invalid');
                            } else {
                                $('#correoError').text('');
                                $('#correo').removeClass('is-invalid');
                            }
                        });
                    }
                });
            });
        </script>
    }
</body>
</html>
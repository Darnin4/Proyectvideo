@page
@model VideojuegosStore.Pages.Cliente.Compras.IndexModel
@{
    ViewData["Title"] = "Mis Compras";
}

<div class="container mt-4">
    <h2><i class="fas fa-shopping-bag me-2"></i>Mis Compras</h2>

    @if (Model.Compras.Count == 0)
    {
        <div class="alert alert-info mt-4">
            <i class="fas fa-info-circle me-2"></i>No has realizado ninguna compra aún.
        </div>
    }
    else
    {
        <div class="table-responsive mt-4">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Videojuegos</th>
                        <th>Cantidad</th>
                        <th>Total</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var compra in Model.Compras)
                    {
                        <tr>
                            <td>@compra.FechaCompra.ToString("dd/MM/yyyy")</td>
                            <td>
                                <ul class="list-unstyled">
                                    @foreach (var detalle in compra.Detalles)
                                    {
                                        <li>@detalle.Videojuego.Titulo</li>
                                    }
                                </ul>
                            </td>
                            <td>
                                <ul class="list-unstyled">
                                    @foreach (var detalle in compra.Detalles)
                                    {
                                        <li>@detalle.Cantidad</li>
                                    }
                                </ul>
                            </td>
                            <td>@compra.Total.ToString("C")</td>
                            <td>
                                <a href="/Cliente/Compras/Details/@compra.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i> Detalles
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .table {
            background-color: white;
            border-radius: 8px;
            overflow: hidden;
        }

            .table thead th {
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.85rem;
                letter-spacing: 0.5px;
            }

            .table tbody tr:hover {
                background-color: rgba(13, 110, 253, 0.05);
            }

        .table-bordered {
            border: 1px solid #dee2e6;
        }

        .table-primary {
            --bs-table-bg: #0d6efd;
            --bs-table-color: white;
        }

        .btn-outline-primary {
            transition: all 0.3s ease;
        }

            .btn-outline-primary:hover {
                background-color: #0d6efd;
                color: white;
            }

        .alert-info {
            background-color: #e7f6ff;
            border-color: #b6e0fe;
            color: #0c5460;
        }

        h2 {
            color: #2c3e50;
            font-weight: 600;
            border-bottom: 2px solid #0d6efd;
            padding-bottom: 10px;
            display: inline-block;
        }
    </style>
}
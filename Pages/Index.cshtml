@page
@model VideojuegosStore.Pages.IndexModel
@{
    Layout = null;
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        background-color: #121212;
        color: white;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://cdn.hobbyconsolas.com/sites/navi.axelspringer.es/public/styles/main_element/public/media/image/2017/08/que-2017-sigue-siendo-mejor-ano-videojuegos.jpg?itok=E3waGhvu');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .container {
        text-align: center;
        padding: 2rem;
        background-color: rgba(0, 0, 0, 0.7);
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(255, 65, 108, 0.5);
        max-width: 600px;
        animation: fadeIn 1.5s ease-in-out;
    }

    h2 {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        color: #ff416c;
        text-shadow: 0 0 10px rgba(255, 65, 108, 0.7);
    }

    .btn-primary {
        background: linear-gradient(to right, #ff416c, #ff4b2b);
        border: none;
        padding: 12px 30px;
        font-size: 1.1rem;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        text-decoration: none;
        color: white;
        font-weight: bold;
        box-shadow: 0 5px 15px rgba(255, 65, 108, 0.4);
    }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(255, 65, 108, 0.6);
            background: linear-gradient(to right, #ff4b2b, #ff416c);
        }

        .btn-primary:active {
            transform: translateY(1px);
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@media (max-width: 768px) {
        h2 {
            font-size: 2rem;
        }

        .container {
            width: 90%;
            padding: 1.5rem;
        }
    }
</style>

<div class="container">
    <h2>Bienvenido a Videojuegos Store</h2>
    <a asp-page="/Login" class="btn btn-primary">Iniciar Sesión</a>
</div>
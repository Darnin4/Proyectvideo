@page
@model VideojuegosStore.Pages.LoginModel
@{
    Layout = null;
}
<style>
    :root {
        --neon-blue: #00f5ff;
        --neon-purple: #bc13fe;
        --neon-pink: #ff44cc;
        --dark: #0d0d1a;
        --darker: #0a0a14;
        --light: #e6f1ff;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: 'Rajdhani', 'Segoe UI', sans-serif;
        background: linear-gradient(rgba(13, 13, 26, 0.85), rgba(10, 10, 20, 0.9)), url('https://images.unsplash.com/photo-1542751371-adc38448a05e?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        color: var(--light);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow-x: hidden;
    }

    .login-container {
        width: 100%;
        max-width: 450px;
        z-index: 100;
        padding: 2.5rem;
        background: rgba(20, 20, 40, 0.7);
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 245, 255, 0.5), 0 0 30px rgba(188, 19, 254, 0.3);
        backdrop-filter: blur(8px);
        border: 1px solid rgba(0, 245, 255, 0.2);
        animation: pulse 6s infinite alternate;
        margin: 20px;
        position: relative;
        overflow: hidden;
    }

        .login-container::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient( to bottom right, transparent 45%, rgba(0, 245, 255, 0.1) 50%, transparent 55% );
            transform: rotate(30deg);
            animation: shine 8s infinite;
        }

    h2 {
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(to right, var(--neon-blue), var(--neon-purple));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 10px rgba(0, 245, 255, 0.3);
        position: relative;
        letter-spacing: 2px;
    }

        h2::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 3px;
            background: linear-gradient(to right, var(--neon-blue), var(--neon-pink));
            border-radius: 3px;
            box-shadow: 0 0 10px var(--neon-blue);
        }

    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: var(--neon-blue);
        font-size: 1.1rem;
        text-shadow: 0 0 5px rgba(0, 245, 255, 0.3);
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        font-size: 1rem;
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid var(--neon-blue);
        border-radius: 8px;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 0 10px rgba(0, 245, 255, 0.1);
    }

        .form-control:focus {
            outline: none;
            border-color: var(--neon-pink);
            box-shadow: 0 0 15px rgba(255, 68, 204, 0.4);
            background: rgba(0, 0, 0, 0.6);
        }

    select.form-control {
        appearance: none;
        background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='%2300f5ff'%3e%3cpath d='M7 10l5 5 5-5z'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 15px center;
        background-size: 15px;
    }

    .btn-primary {
        width: 100%;
        padding: 14px;
        background: linear-gradient(to right, var(--neon-blue), var(--neon-purple));
        border: none;
        border-radius: 8px;
        color: var(--darker);
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
        position: relative;
        overflow: hidden;
        box-shadow: 0 0 15px rgba(0, 245, 255, 0.5);
        z-index: 1;
    }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 0 25px rgba(188, 19, 254, 0.7);
            color: white;
        }

        .btn-primary:active {
            transform: translateY(0);
        }

        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
            z-index: -1;
        }

        .btn-primary:hover::before {
            left: 100%;
        }

    .text-danger {
        color: #ff1a75 !important;
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
        text-shadow: 0 0 5px rgba(255, 26, 117, 0.3);
    }

    .alert-danger {
        background-color: rgba(255, 26, 117, 0.15);
        border: 1px solid #ff1a75;
        color: white;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        border-left: 4px solid #ff1a75;
        box-shadow: 0 0 15px rgba(255, 26, 117, 0.2);
    }

        .alert-danger ul {
            margin: 0;
            padding-left: 20px;
        }

        .alert-danger li {
            margin-bottom: 5px;
        }

    .register-link {
        text-align: center;
        margin-top: 1.5rem;
        color: rgba(230, 241, 255, 0.7);
        position: relative; /* Añadido para asegurarse de que se pueda manipular el z-index */
    }

        .register-link a {
            color: var(--neon-blue);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            text-shadow: 0 0 5px rgba(0, 245, 255, 0.3);
            position: relative; /* Asegura que se pueda manipular el z-index */
            z-index: 10; /* Asegura que el enlace esté encima de otros elementos */
        }

            .register-link a:hover {
                color: var(--neon-pink);
                text-shadow: 0 0 10px rgba(255, 68, 204, 0.5);
            }


    @@keyframes pulse {
        0% {
            box-shadow: 0 0 15px rgba(0, 245, 255, 0.5), 0 0 30px rgba(188, 19, 254, 0.3);
        }

        50% {
            box-shadow: 0 0 20px rgba(0, 245, 255, 0.7), 0 0 40px rgba(188, 19, 254, 0.5);
        }

        100% {
            box-shadow: 0 0 15px rgba(0, 245, 255, 0.5), 0 0 30px rgba(188, 19, 254, 0.3);
        }
    }

    @@keyframes shine {
        0% {
            transform: rotate(30deg) translate(-30%, -30%);
        }

        100% {
            transform: rotate(30deg) translate(30%, 30%);
        }
    }

    @@media (max-width: 576px) {
        .login-container {
            padding: 1.8rem;
            margin: 15px;
        }

        h2 {
            font-size: 2rem;
        }
    }
</style>

<div class="login-container">
    <h2>INICIAR SESIÓN</h2>

    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form method="post">
        <div class="form-group">
            <label asp-for="Input.Correo">CORREO ELECTRÓNICO</label>
            <input asp-for="Input.Correo" class="form-control" placeholder="tucorreo@ejemplo.com" />
            <span asp-validation-for="Input.Correo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Contraseña">CONTRASEÑA</label>
            <input asp-for="Input.Contraseña" type="password" class="form-control" placeholder="••••••••" />
            <span asp-validation-for="Input.Contraseña" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Rol">ROL</label>
            <select asp-for="Input.Rol" class="form-control">
                <option value="">SELECCIONE UN ROL</option>
                <option value="Administrador">ADMINISTRADOR</option>
                <option value="Cliente">CLIENTE</option>
            </select>
            <span asp-validation-for="Input.Rol" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">ACCEDER</button>

        <div class="register-link">
            <p>¿NO TIENES CUENTA? <a asp-page="/Registro">REGÍSTRATE AQUÍ</a></p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}